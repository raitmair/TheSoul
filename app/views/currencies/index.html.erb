<p id="notice"><%= notice %></p>

<h1>Listing Currencies</h1>

<table>
  <thead>
  <tr>
    <th>Name</th>
    <th>Create</th>
    <th>Update</th>
    <th>Destroy</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @currencies.each do |currency| %>
      <tr>
        <td><%= currency.name %></td>
        <td><%= currency.create %></td>
        <td><%= currency.update %></td>
        <td><%= currency.destroy %></td>
        <td><%= link_to 'Show', currency %></td>
        <td><%= link_to 'Edit', edit_currency_path(currency) %></td>
        <td><%= link_to 'Destroy', currency, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Currency', new_currency_path %>
